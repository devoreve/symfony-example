{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block content %}
    <h1>Liste des catégories</h1>

    <ul>
        {% for category in categories %}
            <li><a href="{{ path('categories_show', {id: category.id}) }}">{{ category.name }} ({{ category.totalPosts}})</a></li>
        {% endfor %}
    </ul>
{% endblock %}