{% extends 'base.html.twig' %}

{% block title %}{{ id ? "Modification d'un article" : "Création d'un article" }}{% endblock %}

{% block content %}

    <h1>{{ id ? "Modifier l'article" : "Créer un article" }}</h1>

    {{ form_start(form) }}

        {{ form_row(form.title) }}
        {{ form_row(form.description) }}
        {{ form_row(form.category) }}

        <div class="mt-4">
            {{ form_row(form.submit, {label: id ? "Modifier" : "Créer"}) }}
        </div>
    {{ form_end(form) }}
{% endblock %}